journal = {PLoS Biology},
month = {dec},
number = {12},
pages = {2885--2897},
pmid = {18052609},
title = {{Incomplete and inaccurate vocal imitation after knockdown of FoxP2 in songbird basal ganglia nucleus area X}},
url = {https://dx.plos.org/10.1371/journal.pbio.0050321},
volume = {5},
year = {2007}
}
