issn = {00280836},
journal = {Nature},
keywords = {Evolutionary genetics,Phylogenetics},
month = {oct},
number = {7470},
pages = {228--231},
pmid = {24005325},
publisher = {Nature Publishing Group},
title = {{Genome-wide signatures of convergent evolution in echolocating mammals}},
