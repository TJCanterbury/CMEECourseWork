issn = {1545-7885},
journal = {PLOS Biology},
month = {jun},
number = {6},
pages = {e2006459},
publisher = {Public Library of Science},
title = {{A speed–fidelity trade-off determines the mutation rate and virulence of an RNA virus}},
url = {https://dx.plos.org/10.1371/journal.pbio.2006459},
volume = {16},
year = {2018}
}
