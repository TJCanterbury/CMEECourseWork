issn = {0028-0836},
journal = {Nature},
month = {jan},
number = {7074},
pages = {344--348},
pmid = {16327776},
title = {{Quasispecies diversity determines pathogenesis through Cooperative Interactions Within a Viral Population}},
url = {http://www.nature.com http://www.ncbi.nlm.nih.gov/pubmed/16327776 http://www.pubmedcentral.nih.gov/articlerender.fcgi?artid=PMC1569948 http://www.nature.com/articles/nature04388},
