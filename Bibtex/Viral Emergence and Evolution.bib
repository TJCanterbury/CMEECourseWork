issn = {0027-8424},
journal = {Proceedings of the National Academy of Sciences},
number = {19},
pages = {10830--10835},
pmid = {12960384},
title = {{Resistance of virus to extinction on bottleneck passages: Study of a decaying and fluctuating pattern of fitness loss}},
